{
  "name": "media-trigger",
  "version": "4.2.0",
  "description": "MediaTrigger is designed to control the response to changes in media queries, allowing you to perform specific actions when entering or exiting a particular media state, or any change to a media state.",
  "author": "ux-ui.pro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ux-ui-pro/media-trigger.git"
  },
  "bugs": {
    "url": "https://github.com/ux-ui-pro/media-trigger/issues"
  },
  "homepage": "https://github.com/ux-ui-pro/media-trigger",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "vite build",
    "lint:js": "eslint **/*.{ts,js}",
    "lint:fix:js": "eslint **/*.{ts,js} --fix",
    "format:js": "prettier --write **/*.{ts,js}",
    "lint:fix": "yarn lint:fix:js && yarn format:js"
  },
  "source": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.es.js",
    "require": "./dist/index.cjs.js"
  },
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@eslint/js": "9.21.0",
    "@rollup/plugin-terser": "0.4.4",
    "@types/node": "22.13.8",
    "@typescript-eslint/eslint-plugin": "8.25.0",
    "@typescript-eslint/parser": "8.25.0",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-import-resolver-typescript": "3.8.3",
    "eslint-plugin-import": "2.31.0",
    "globals": "16.0.0",
    "prettier": "3.5.2",
    "rimraf": "6.0.1",
    "typescript": "5.8.2",
    "vite": "6.2.0",
    "vite-plugin-dts": "4.5.1"
  },
  "keywords": [
    "media",
    "queries",
    "events",
    "trigger",
    "check",
    "responsive",
    "query",
    "javascript",
    "typescript",
    "frontend",
    "matchMedia",
    "breakpoints"
  ]
}
