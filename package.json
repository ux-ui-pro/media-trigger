{
  "name": "media-trigger",
  "version": "4.0.0",
  "description": "MediaTrigger is designed to control the response to changes in media queries, allowing you to perform specific actions when entering or exiting a particular media state, or any change to a media state.",
  "author": "ux-ui.pro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ux-ui-pro/media-trigger.git"
  },
  "bugs": {
    "url": "https://github.com/ux-ui-pro/media-trigger/issues"
  },
  "homepage": "https://github.com/ux-ui-pro/media-trigger",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist .parcel-cache",
    "build": "yarn clean && parcel build",
    "lint:js": "eslint **/*.{ts,js}",
    "lint:fix:js": "eslint **/*.{ts,js} --fix",
    "format:js": "prettier --write **/*.{ts,js}",
    "lint:fix": "yarn lint:fix:js && yarn format:js"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@eslint/js": "9.12.0",
    "@parcel/packager-ts": "2.13.2",
    "@parcel/transformer-typescript-types": "2.13.2",
    "@typescript-eslint/eslint-plugin": "8.9.0",
    "@typescript-eslint/parser": "8.9.0",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "globals": "15.11.0",
    "parcel": "2.13.2",
    "prettier": "3.4.2",
    "typescript": "5.4.5"
  },
  "keywords": [
    "media",
    "queries",
    "events",
    "trigger",
    "check",
    "responsive",
    "query",
    "javascript",
    "typescript",
    "frontend",
    "matchMedia",
    "breakpoints"
  ]
